<%= form_for :data, url: '/api/follow', remote: true, :html => {:class => 'follow', :'data-type' => 'json'} do |f| %>
    <h1>Follow users</h1>
    <%= f.text_area :users, rows: 20, style: 'width:100%' %>
    <br/>
    <%= f.submit %>
    <br/>
<% end %>


<%= form_for :data, url: '/api/parse', :html => {:class => 'parse',  :multipart => true}, :remote => true do |f| %>
    <h1>Populate from flitter</h1>
    <%= f.file_field :file %>
    <div class="actions">
      <%= f.submit %>
    </div>
<% end %>

